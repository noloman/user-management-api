# User Management API - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/usermanagement_dev
SPRING_DATASOURCE_USERNAME=userapp
SPRING_DATASOURCE_PASSWORD=userapp123

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================
SERVER_PORT=8082

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
SHOW_SQL=false
FORMAT_SQL=false
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_SQL=WARN

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_STARTTLS=false
MAIL_DEBUG=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_EMAIL_FROM=noreply@usermanagement.com
APP_BASE_URL=http://localhost:8082
APP_ADMIN_ROLE=ADMIN
APP_USER_ROLE=USER
APP_FIRST_USER_ADMIN=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-very-secure-jwt-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRATION=900000       # 15 minutes
JWT_REFRESH_TOKEN_EXPIRATION=604800000   # 7 days

# =============================================================================
# PRODUCTION EMAIL EXAMPLES
# =============================================================================
# Gmail SMTP (uncomment and configure for production)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
